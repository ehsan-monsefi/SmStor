@model PageList<Cellphone>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 kol">
    <div class="row">
        <div class="col-9">
            <ul class="breadcrumb bg-light">
                <li class="breadcrumb-item"><a href="~/Home/Index"> AVASHOP</a></li>
                <li class="breadcrumb-item"><a href="~/Products/Index"> Products</a></li>
                <li class="breadcrumb-item"><a href="~/Cellphone/Index"> Cellphone</a></li>
            </ul>
            <div class="row">
                <div class="col-12 b">
                    <i class='fas fa-align-left'> Sorted By :</i>
                    <a href="#" class="btn btn-secondary btn-sm">Most Visited</a>
                    <a href="#" class="btn btn-light btn-sm">Best Selling</a>
                    <a href="#" class="btn btn-light btn-sm">Most Popular</a>
                    <a href="#" class="btn btn-light btn-sm">The Newest</a>
                    <a href="#" class="btn btn-light btn-sm">Cheapest</a>
                    <a href="#" class="btn btn-light btn-sm">Most Expensive</a>
                </div>
            </div>
            <div class="row">
                @foreach (var Cellphone in Model.Data)
                {
                    <div class="col-4 card crd">
                        <img src="~/@Cellphone.CellphoneMedia[0].CellphonePicPath" />
                        <div class="card-body bg-white">
                            <h3>@Cellphone.CellphoneName</h3>
                            <hr />
                            <h6>@Cellphone.CellphonePrice $</h6>
                            <p>@Cellphone.CellphoneDescription</p>
                            <p>@Cellphone.CellphoneInsertTime</p>
                            <a href="#" class="btn btn-outline-dark">See Profile</a>
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item"><a class="page-link" href="#">6</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </div>
        </div>
        <div class="col-3">
            <div class="row">
                <div class="col-12 cat">
                    <img src="../Img/32.jpg" />
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-12 cat1">
                    <h3>Search Results</h3>
                    <hr />
                    <form action="~/Cellphone/Index" method="post">
                        <input class="form-control mr-sm-2" type="text" name="q" placeholder="Enter Your Laptop Name">
                    </form>                    
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-12 cat5">
                    <img src="../Img/45.jpg" />
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-12 cat2L">
                    <h3>Brand</h3>
                    <hr />
                    <form action="~/Cellphone/Index" method="post">
                        <div class="form-check cat2a">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="q" value="Samsung">Samsung
                            </label>
                        </div>
                        <div class="form-check cat2a">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="q" value="Apple">Apple
                            </label>
                        </div>
                        <div class="form-check cat2a">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="q" value="Nokia">Nokia
                            </label>
                        </div>
                        <div class="form-check cat2a">
                            <label class="form-check-label"> 
                                <input type="checkbox" class="form-check-input" name="q" value="Lg">Lg
                            </label>
                        </div>
                        <div class="form-check cat2a">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="q" value="Xiaomi">Xiaomi
                            </label>
                        </div>
                        <div class="form-check cat2a">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="q" value="Huawei">Huawei
                            </label>
                        </div>
                        <div class="form-check cat2a">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="q" value="Orod">Orod
                            </label>
                        </div>
                        <div class="form-check cat2a">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="q" value="Cat">Cat
                            </label>
                        </div>
                        <div class="form-check cat2a">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="q" value="Htc">Htc
                            </label>
                        </div>
                        <br />
                        <input type="submit" class="btn btn-outline-light" name="q" value="Apply Filter" />
                    </form>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-12 cat4L">
                    <form action="~/Cellphone/Index" method="post">
                        <div class="form-group">
                            <select class="form-control" id="sel1" name="q">
                                <option>Brands</option>
                                <option>Samsung</option>
                                <option>Apple</option>
                                <option>Nokia</option>
                                <option>Lg</option>
                                <option>Xiaomi</option>
                                <option>Huawei</option>
                                <option>Orod</option>
                                <option>Cat</option>
                                <option>Htc</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-outline-light">Apply Filter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="hm3">
    <h1>Special Product</h1>
    <hr />
    <div class="prsss">
        <meta charset="utf-8" />
        <meta name="viewport"
              content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />

        <link rel="stylesheet"
              href="https://unpkg.com/swiper/swiper-bundle.min.css" />
        <div>
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                    @foreach (var Cellphone in Model.Data)
                    {
                        <div class="swiper-slide">
                            <img src="~/@Cellphone.CellphoneMedia[0].CellphonePicPath" />
                            <div class="card-img-overlay ssss">
                                <h4 class="card-title">@Cellphone.CellphoneName</h4>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <p class="card-text">@Cellphone.CellphoneDescription</p>
                                <h6 class="card-text">@Cellphone.CellphonePrice</h6>
                                <a href="#" class="btn btn-outline-light">See Profile</a>
                            </div>
                        </div>
                    }
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
        <script>
            var swiper = new Swiper(".mySwiper", {
                slidesPerView: 3,
                spaceBetween: 30,
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                },
            });
        </script>
    </div>
</div>

