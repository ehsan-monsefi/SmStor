              content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />

        <link rel="stylesheet"
              href="https://unpkg.com/swiper/swiper-bundle.min.css" />
        <div>
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                    @foreach (var Cellphone in Model.Data)
                    {
                        <div class="swiper-slide">
                            <img src="~/@Cellphone.CellphoneMedia[0].CellphonePicPath" />
                            <div class="card-img-overlay ssss">
                                <h4 class="card-title">@Cellphone.CellphoneName</h4>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <p class="card-text">@Cellphone.CellphoneDescription</p>
                                <h6 class="card-text">@Cellphone.CellphonePrice</h6>
                                <a href="#" class="btn btn-outline-light">See Profile</a>
                            </div>
                        </div>
                    }
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
        <script>
            var swiper = new Swiper(".mySwiper", {
                slidesPerView: 3,
                spaceBetween: 30,
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                },
            });
        </script>
    </div>
</div>

