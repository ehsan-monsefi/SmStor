<div class="hm3">
    <h1>Special Product</h1>
    <hr />
    <div class="prsss">
        <meta charset="utf-8" />
        <meta name="viewport"
              content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />

        <link rel="stylesheet"
              href="https://unpkg.com/swiper/swiper-bundle.min.css" />
        <div>
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                    @foreach (var Camera in Model.Data)
                    {
                        <div class="swiper-slide">
                            <img src="~/@Camera.CamerapMedia[0].CameraPicPath" />
                            <div class="card-img-overlay ssss">
                                <h4 class="card-title">@Camera.CameraName</h4>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <p class="card-text">@Camera.CameraDescription</p>
                                <h6 class="card-text">@Camera.CameraPrice</h6>
                                <a href="#" class="btn btn-outline-light">See Profile</a>
                            </div>
                        </div>
                    }
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
        <script>
            var swiper = new Swiper(".mySwiper", {
                slidesPerView: 3,
                spaceBetween: 30,
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                },
            });
        </script>
    </div>
</div>

